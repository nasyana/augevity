<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
    <head>
        <meta charset="utf-8">
        <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
        <meta content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0" name="viewport">
        <meta content="origin" name="referrer">

        <title>{{ page_title }}</title>

        {{ content_for_header }}

        {{ checkout_stylesheets }}
        {{ checkout_scripts }}
        <script>
// {% if checkout.shipping_address.country_code == 'NZ' %}
//     Shopify.Checkout.OrderStatus.addContentBox(
//     '<h2>3 Items Max</h2>',
//     '<p>Unfortunately NZ Customs is not allowing anything more than 1.2kg. Please limit your order to maximum 3 items if you are ordering from NZ.</p>'
//     )
// {% endif %}
</script>
    </head>
    <body>
        {{ skip_to_content_link }}

        <header class="banner" data-header role="banner">
            <div class="wrap">
                {{ content_for_logo }}
            </div>
        </header>


        {{ order_summary_toggle }}
        <div class="content" data-content>
            <div class="wrap">
                <div class="main">


                    <header class="main__header" role="banner">
                        {{ content_for_logo }}
                        {{ breadcrumb }}
                        {{ alternative_payment_methods }}
                    </header>
                    <main class="main__content" role="main">
                        {% if checkout.shipping_address.country_code == 'NZ' %}
                            <div style="background: #ffe6e6; padding: 3%; margin-bottom: 20px">
                                <h2>2 Items Max - NZ Customs Limit</h2>
                                <p>Unfortunately NZ Customs is not allowing anything more than 1.2kg. Please limit your order to maximum 2 items if you are ordering to NZ.</p>
                            </div>
                        {% endif %}
                        {{ content_for_layout }}
                    </main>

                    <footer class="main__footer" role="contentinfo">
                        {{ content_for_footer }}
                    </footer>
                </div>
                <aside class="sidebar" role="complementary">
                    <div class="sidebar__header">
                        {{ content_for_logo }}
                    </div>
                    <div class="sidebar__content">
                        {{ content_for_order_summary }}
                    </div>
                </aside>
            </div>
        </div>

        {{ tracking_code }}
        <script async src="https://static.klaviyo.com/onsite/js/klaviyo.js?company_id=Hgsgtg&module=CONSENT_AT_CHECKOUT" type="text/javascript"></script>
    </body>
</html>
