  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/meadow-marrow.myshopify.com/products/configure/197297/edit
{% endcomment %}
{% if product.metafields.custom_fields["testimonials_group"] != blank %}
  <div class="custom-field custom-field__testimonials-group custom-field__type--field-collection">
    <h3 class="custom-field--title">Testimonials Group</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign review_array = product.metafields.custom_fields["review"] | split: separator %}
      {% assign review_author_array = product.metafields.custom_fields["review_author"] | split: separator %}
      {% assign fc_keys = product.metafields.custom_fields["testimonials_group"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item-- fc-index--{{ index }}">
          <div class="fc-field field__review">
            {{ review_array[index] }}
          </div>
          <div class="fc-field field__review-author">
            {{ review_author_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}