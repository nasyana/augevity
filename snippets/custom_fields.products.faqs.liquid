{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/meadow-marrow.myshopify.com/products/configure/128583/edit
{% endcomment %}
{% if product.metafields.custom_fields["faqs"] != blank %}
  <div class="custom-field custom-field__faqs custom-field__type--field-collection">
    <h3 class="custom-field--title">FAQs</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign question_array = product.metafields.custom_fields["question"] | split: separator %}
      {% assign answer_array = product.metafields.custom_fields["answer"] | split: separator %}
      {% assign fc_keys = product.metafields.custom_fields["faqs"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item--faqs fc-index--{{ index }}">
          <div class="fc-field field__question">
            {{ question_array[index] }}
          </div>
          <div class="fc-field field__answer">
            {{ answer_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}