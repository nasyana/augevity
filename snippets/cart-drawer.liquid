                                                                                                                                                                                                                                                                                                                                                                                                          "hasShippingEstimator": false
                                                                                                                                                                                                                                                                                                                                                                                                        }
    {%- endcapture -%}
    <style type="text/css">
        .Cart__Empty.Heading.u-h5 {
            text-align: center;
    
        }
    
        .bottomdata {
            padding: 1% 7%;
            border-top: 1px solid;
        }
        .bottomdata.last {
            border-bottom: 2px solid #000;
        }
    
        .Cart__Checkout {
    
            font-family: "Circular Std" !important;
        }
    
        input[type="text"]:disabled {
            color: #333 !important;
        }
    
        .addthencart {
    
            background: #000 !important;
            width: 100% !important;
            color: #fff !important;
